//
if (!defined('IS_ADMIN_FLAG')) {
    die('Illegal Access');
}

define('VAT_MOD_CURRENT_RELEASE', '2.0.0-beta1');
define('VAT_MOD_CURRENT_UPDATE_DATE', '2017-09-05');

define('VAT_MOD_CURRENT_VERSION', VAT_MOD_CURRENT_RELEASE . ': ' . VAT_MOD_CURRENT_UPDATE_DATE);

// -----
// Wait until an admin is logged in before seeing if any initialization steps need to be performed.
// That ensures that "someone" will see the plugin's installation/update messages!
//
if (isset($_SESSION['admin_id'])) {
    // -----
    // Create the plugin's configuration-group, if it's not already there.  That way, we'll have the
    // configuration_group_id, if needed for future configuration updates.
    //
    $configurationGroupTitle = 'VAT Mod Settings';
    $configuration = $db->Execute(
        "SELECT configuration_group_id 
           FROM " . TABLE_CONFIGURATION_GROUP . " 
          WHERE configuration_group_title = '$configurationGroupTitle' 
          LIMIT 1"
    );
    if ($configuration->EOF) {
        $db->Execute( 
            "INSERT INTO " . TABLE_CONFIGURATION_GROUP . " 
                (configuration_group_title, configuration_group_description, sort_order, visible) 
             VALUES 
                ('$configurationGroupTitle', '$configurationGroupTitle Settings', '1', '1');"
        );
        $cgi = $db->Insert_ID(); 
        $db->Execute(
            "UPDATE " . TABLE_CONFIGURATION_GROUP . " 
                SET sort_order = $cgi 
              WHERE configuration_group_id = $cgi
              LIMIT 1"
        );
    } else {
        $cgi = $configuration->fields['configuration_group_id'];
    }

    // ----
    // Perform the plugin's initial install, if not currently present.
    //
    if (!defined('VAT_MOD_MODULE_VERSION')) {
        // -----
        // Create configuration items that are new to this plugin version.
        //
        $db->Execute(
            "INSERT INTO " . TABLE_CONFIGURATION . " 
                (configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, set_function) 
             VALUES 
                ('Plugin Version and Release Date', 'VAT_MOD_MODULE_VERSION', '" . VAT_MOD_CURRENT_VERSION . "', 'The &quot;VAT Mod&quot; current version and release date.', $cgi, 10, now(), 'trim(')"
        );
        
        $db->Execute(
           "INSERT INTO " . TABLE_CONFIGURATION . " 
                ( configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, use_function, set_function ) 
            VALUES 
                ( 'European Union Countries List', 'VAT_MOD_EU_COUNTRIES', 'AT,BE,BG,CY,CZ,DE, DK,EE,EL,ES,FI,FR, GB,HR,HU,IE,IT,LT, LU,LV,MT,NL,PL, PT,RO,SE,SI,SK', 'This comma-separated list identifies the countries that are in the EU by their 2-character ISO codes; intervening blanks are allowed. You normally will not need to change this list; it is provided as member countries move in and out of the EU.<br /><br/><b>Default</b>: AT,BE,BG,CY,CZ,DE, DK,EE,EL,ES,FI,FR, GB,HR,HU,IE,IT,LT, LU,LV,MT,NL,PL, PT,RO,SE,SI,SK', $cgi, 15, now(), NULL, NULL)"        
        );
        
        $db->Execute(
            "INSERT INTO " . TABLE_CONFIGURATION . " 
                (configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, use_function, set_function) 
             VALUES 
                ('Enable storefront processing?', 'VAT_MOD_ENABLED', 'false', 'The VAT Mod\'s processing is enabled when this setting is &quot;true&quot;.', $cgi, 20, now(), NULL, 'zen_cfg_select_option(array(\'true\', \'false\'),')"
        );
        
        $db->Execute(
            "INSERT INTO " . TABLE_CONFIGURATION . " 
                (configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, use_function, set_function) 
             VALUES 
                ('Enable <em>VAT Refund</em> for in-country purchases?', 'VAT_MOD_IN_COUNTRY_REFUND', 'true', 'Should purchases by addresses in the store\'s country be granted a <em>VAT Refund</em>?', $cgi, 25, now(), NULL, 'zen_cfg_select_option(array(\'true\', \'false\'),')"
        );

        $db->Execute(
            "INSERT INTO " . TABLE_CONFIGURATION . " 
                (configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, use_function, set_function) 
             VALUES 
                ('<em>VAT Number</em> Validation', 'VAT_MOD_VALIDATION', 'Admin', 'Does a <em>VAT Number</em> require validation prior to granting the customer a VAT Refund? Choose the validation method to use for your store, one of:<br /><br /><b>Never</b> ... no validation required.<br /><b>Customer</b> ... validate on any customer update<br /><b>Admin</b> ... only validated by admin action.<br />', $cgi, 50, now(), NULL, 'zen_cfg_select_option(array(\'Never\', \'Customer\', \'Admin\'),')"
        );
                
        $db->Execute(
           "INSERT INTO " . TABLE_CONFIGURATION . " 
                ( configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, use_function, set_function ) 
            VALUES 
                ( 'VAT Number: Unvalidated Indicator', 'VAT_MOD_UNVERIFIED', '*', 'Identify the indicator that you want to give your customers who have entered a <em>VAT Number</em> when that number is not yet validated.<br /><br />Default: <b>*</b>', $cgi, 52, now(), NULL, NULL)"        
        );
        
        $db->Execute(
            "INSERT INTO " . TABLE_CONFIGURATION . " 
                (configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, use_function, set_function) 
             VALUES 
                ('Enable debug?', 'VAT_MOD_DEBUG', 'false', 'Should the plugin\'s <em>debug</em> mode be enabled?  When enabled, each VAT validation request and response is logged to /logs/VatValidate.log.', $cgi, 1000, now(), NULL, 'zen_cfg_select_option(array(\'true\', \'false\'),')"
        );
        
        // -----
        // Create the configuration item that holds the store's VAT Number, copying the value from the "older"
        // version of this plugin, if available.
        //
        $default_value = (defined('TVA_SHOP_INTRACOM')) ? TVA_SHOP_INTRACOM : '';
        $db->Execute(
            "INSERT INTO " . TABLE_CONFIGURATION . " 
                ( configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, use_function, set_function ) 
            VALUES 
                ( 'VAT Number for Your Store', 'VAT_MOD_VAT_NUMBER', '$default_value', 'Enter the VAT Number for <em>your</em> store.', $cgi, 30, now(), NULL, NULL)"
        );

        // -----
        // Create the configuration item that holds any VAT Number's minimum length, copying the value from
        // the "older" version of the plugin, if available.
        //
        $default_value = (defined('ENTRY_TVA_INTRACOM_MIN_LENGTH')) ? ENTRY_TVA_INTRACOM_MIN_LENGTH : '10';
        $db->Execute(
            "INSERT INTO " . TABLE_CONFIGURATION . " 
                ( configuration_title, configuration_key, configuration_value, configuration_description, configuration_group_id, sort_order, date_added, use_function, set_function ) 
             VALUES 
                ( 'Minimum VAT Number Length', 'VAT_MOD_MIN_LENGTH', '$default_value', 'Identify the minimum length of a VAT Number, used to check the customer\'s input.  Enter a value of <em>0</em> to disable this check.', $cgi, 35, now(), NULL, NULL)"
        );
        
        // -----
        // Add an entry to the address_book table that will hold the VAT Number associated with the address
        // and an indication as to whether that value is valid. If the "older" version of the plugin is currently 
        // installed, any pre-existing values are copied to the newly-added field and marked as a "legacy"
        // validation.
        //
        $db->Execute(
            "ALTER TABLE " . TABLE_ADDRESS_BOOK . " 
               ADD entry_vat_number varchar(32) DEFAULT NULL AFTER entry_company,
               ADD entry_vat_validated tinyint(1) NOT NULL default '0' AFTER entry_vat_number"
        );
        if ($sniffer->field_exists(TABLE_ADDRESS_BOOK, 'entry_tva_intracom')) {
            $db->Execute(
                "UPDATE " . TABLE_ADDRESS_BOOK . "
                    SET entry_vat_number = entry_tva_intracom,
                        entry_vat_validated = 7
                  WHERE entry_tva_intracom IS NOT NULL"
            );
        }
        
        // -----
        // Add an entry to the orders table that will hold the VAT Number associated with the order.  If
        // the "older" version of the plugin is currently installed, any pre-existing values are copied to
        // the newly-added field.
        //
        $db->Execute(
            "ALTER TABLE " . TABLE_ORDERS . "
               ADD billing_vat_number varchar(32) NOT NULL DEFAULT '' AFTER billing_company,
               ADD billing_vat_validated tinyint(1) NOT NULL default '0' AFTER billing_vat_number"
        );
        if ($sniffer->field_exists(TABLE_ORDERS, 'billing_tva_intracom')) {
            $db->Execute(
                "UPDATE " . TABLE_ORDERS . "
                    SET billing_vat_number = billing_tva_intracom"
            );
        }
        
        // -----
        // Display a message to the current admin, letting them know that the plugin's been installed
        // and possibly "converted" from that older plugin version.
        //
        $messageStack->add(sprintf(TEXT_MESSAGE_INSTALLED, VAT_MOD_CURRENT_VERSION), 'success');
        if (defined('TVA_SHOP_INTRACOM')) {
            $messageStack->add(TEXT_MESSAGE_INSTALL_CONVERTED, 'success');
        }
      
        define ('VAT_MOD_MODULE_VERSION', '0.0.0');
    }

    // -----
    // Update the configuration table to reflect the current version, if it's not already set.
    //
    if (VAT_MOD_MODULE_VERSION != VAT_MOD_CURRENT_VERSION) {
        $db->Execute(
            "UPDATE " . TABLE_CONFIGURATION . " 
                SET configuration_value = '" . VAT_MOD_CURRENT_VERSION . "' 
              WHERE configuration_key = 'VAT_MOD_MODULE_VERSION'
              LIMIT 1"
        );
        if (VAT_MODULE_VERSION != '0.0.0') {
            $messageStack->add(sprintf(TEXT_MESSAGE_UPDATED, VAT_MOD_MODULE_VERSION, VAT_MOD_CURRENT_VERSION), 'success');
        }
    }
}
